# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/poker_trend
MONGODB_URL=mongodb://admin:password@localhost:27017/poker_trend?authSource=admin
REDIS_URL=redis://localhost:6379

# API Keys - YouTube Data API
YOUTUBE_API_KEY=your_youtube_api_key_here

# API Keys - Twitter API v2
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# API Keys - Reddit API
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

# API Keys - OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# API Keys - TikTok (향후 사용)
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Email Configuration (알림용)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL_ID=C1234567890
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_ERROR_CHANNEL=#poker-trends-errors
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# FFmpeg Configuration
FFMPEG_PATH=/usr/bin/ffmpeg

# File Storage
STORAGE_TYPE=local  # local, s3
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_BUCKET_NAME=poker-trend-assets
AWS_REGION=ap-northeast-2

# Development Settings
NODE_ENV=development
DEBUG=true
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Trend Detection Settings
TREND_CHECK_INTERVAL=300  # 5 minutes in seconds
MINIMUM_TREND_SCORE=70
TREND_ALERT_THRESHOLD=85

# Schedule Settings
TREND_ANALYSIS_SCHEDULE=0 10 * * *  # Daily at 10 AM
TREND_ANALYSIS_TIMEZONE=Asia/Seoul

# Analysis Settings
TREND_THRESHOLD=0.8
MAX_VIDEOS_PER_SEARCH=50
LOOKBACK_HOURS=24

# Service URLs
DATA_COLLECTOR_URL=http://localhost:8001
CONTENT_GENERATOR_URL=http://localhost:8002
FRONTEND_URL=http://localhost:3001